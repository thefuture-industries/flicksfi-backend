             xmlns:local="clr-namespace:flick_finder"
             StartupUri="StartWindow.xaml">
    <Application.Resources>
        <!-- Styles -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/TextBox.xaml" />
