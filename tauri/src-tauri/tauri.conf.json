{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri",
  "version": "0.1.0",
  "identifier": "FlickFinder",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FlicksFI",
        "width": 1024,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/flicksfi-light-none-ico.ico"]
  }
}
