<UserControl x:Class="client.View.MovieSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:client.View"
             xmlns:vm="clr-namespace:client.ViewModel"
             mc:Ignorable="d" 
             Background="#000"
             d:DesignHeight="700" d:DesignWidth="775">

    <UserControl.DataContext>
        <vm:MovieSearchVM />
    </UserControl.DataContext>
    
    <Border CornerRadius="10" Background="#111" Margin="10 0" Padding="10"
        BorderThickness="1" BorderBrush="{StaticResource ColorBorder}" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Label Content="Movie Filter" Style="{StaticResource Font}" Foreground="#fff" FontSize="25" />
                <Border Background="#333" Height="1" Margin="0 10" />
            </StackPanel>

            <TextBox Grid.Row="1" Background="Transparent" BorderThickness="1" BorderBrush="#333" Text="Search"
                 Foreground="#999" Style="{StaticResource Font}" Padding="10" FontSize="17">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <StackPanel Grid.Row="2">
                <StackPanel>
                    <Label Content="Genres" Style="{StaticResource Font}" Foreground="#fff" FontSize="18" />
                    <Border Background="#333" Height="1" Margin="0 10" />
                </StackPanel>

                <WrapPanel>
                    <ItemsControl ItemsSource="{Binding Genres}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" BorderThickness="1" BorderBrush="#444" 
                                        CornerRadius="16" Padding="10 0" Margin="5 5" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="15" Height="15" StrokeThickness="2" Stroke="#999" />
                                        <Label Content="{Binding Title}" Style="{StaticResource Font}" Foreground="#fff" FontSize="14" Margin="5 0 0 0" x:Name="LabelGenre" />
                                    </StackPanel>
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#fff" Duration="0:0:0.4" />
                                                    <ColorAnimation Storyboard.TargetName="LabelGenre" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)" To="#000" Duration="0:0:0.35" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#111" Duration="0:0:0.25" />
                                                    <ColorAnimation Storyboard.TargetName="LabelGenre" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)" To="#fff" Duration="0:0:0.2" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </WrapPanel>
            </StackPanel>

            <StackPanel Grid.Row="3">
                <StackPanel>
                    <Label Content="The year of the movie" Style="{StaticResource Font}" Foreground="#fff" FontSize="18" />
                    <Border Background="#333" Height="1" Margin="0 10" />
                </StackPanel>

                <TextBox Background="Transparent" BorderThickness="1" BorderBrush="#333" Text="Year"
                     Style="{StaticResource Font}" Foreground="#999" Padding="10" FontSize="17">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10" />
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <StackPanel Grid.Row="4" VerticalAlignment="Bottom">
                <Grid>
                    <Border Background="{StaticResource ColorRed}" CornerRadius="7" Padding="8" Cursor="Hand">
                        <Label Content="SEARCH" VerticalAlignment="Center" HorizontalAlignment="Center" 
                            Style="{StaticResource Font}" Foreground="#fff" FontSize="15" Margin="0 -4 0 0" />

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#940000" Duration="0:0:0.08" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FFFF2400" Duration="0:0:0.03" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                    <Border Background="#000" Opacity="0.4" Height="9" VerticalAlignment="Bottom" />
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
