<UserControl x:Class="client.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:client"
             xmlns:components="clr-namespace:client.UI.Components"
             xmlns:view="clr-namespace:client.View"
             mc:Ignorable="d"
             Background="#000"
             d:DesignHeight="750" d:DesignWidth="1125">
    <Grid>
        <components:SkeletonLoader Panel.ZIndex="2" x:Name="Loader" Visibility="Collapsed" />
        
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0">
                <components:Panel />
            </Border>

            <Border Grid.Column="1">
                <Frame x:Name="FrameContent" NavigationUIVisibility="Hidden" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
